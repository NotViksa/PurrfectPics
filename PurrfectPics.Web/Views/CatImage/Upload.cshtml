@model PurrfectPics.Web.ViewModels.CatImageUploadViewModel
@{
    ViewData["Title"] = "Upload Cat Image";
}

<div class="upload-container">
    <div class="upload-card">
        <h1 class="upload-title">Share Your Cat Photo</h1>
        <p class="upload-subtitle">Fill in the details below to upload your cat image</p>

        <form asp-action="Upload" enctype="multipart/form-data" class="upload-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="form-label">Image Title</label>
                <input asp-for="Title" class="form-control" placeholder="Give your image a title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"
                          placeholder="Tell us about your cat"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="form-label">Image Upload*</label>
                <div class="file-upload">
                    <input asp-for="ImageFile" class="form-control"
                           accept=".jpg,.jpeg,.png,.gif" />
                    <div class="file-info">
                        <i class="bi bi-cloud-arrow-up"></i>
                        <span>Click to browse or drag & drop</span>
                        <small>Max 5MB • JPG, PNG, GIF</small>
                    </div>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tags" class="form-label">Tags</label>
                <input asp-for="Tags" class="form-control"
                       placeholder="cute, tabby, orange (separate with commas)" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-upload">
                    <i class="bi bi-cloud-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const fileInfo = this.parentElement.querySelector('.file-info');
            if (this.files.length > 0) {
                fileInfo.innerHTML = `
                    <i class="bi bi-file-image"></i>
                    <span>${this.files[0].name}</span>
                    <small>${(this.files[0].size / 1024 / 1024).toFixed(2)} MB</small>
                `;
            }
        });
    </script>
}