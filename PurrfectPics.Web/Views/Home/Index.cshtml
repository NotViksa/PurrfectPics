@model IEnumerable<PurrfectPics.Data.Models.CatImage>
@{
    ViewData["Title"] = "Purrfect Pics - Home";
}

<div class="row">
    <div class="col-md-9">
        <h2>Recent Uploads</h2>
        <div class="row">
            @foreach (var image in Model)
            {
                <div class="col-md-4 mb-4">
                    <partial name="_ImageCardPartial" model="image" />
                </div>
            }
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                Popular Tags
            </div>
            <div class="card-body">
                @foreach (var tag in ViewBag.PopularTags)
                {
                    <a asp-controller="CatImage" asp-action="Tag" asp-route-tagName="@tag.Name"
                       class="badge bg-primary me-1 mb-1">@tag.Name</a>
                }
            </div>
        </div>
    </div>
</div>