@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <img src="/images/sad-cat.png" alt="Sad cat" class="img-fluid mb-4" style="max-height: 300px;">
            <h1 class="display-4 text-purple">404 - Purr-don Me!</h1>
            <p class="lead">The page you're looking for has scampered away like a startled kitten.</p>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-door"></i> Back to Safety
                </a>
            </div>
            <div class="mt-3">
                <p class="text-muted">Or try these instead:</p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="CatImage" asp-action="Index" class="btn btn-outline-secondary">Browse Cats</a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-secondary">About Us</a>
                </div>
            </div>
        </div>
    </div>
</div>