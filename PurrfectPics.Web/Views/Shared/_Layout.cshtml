<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PurrfectPics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PurrfectPics.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-color">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-camera-fill me-2"></i>PurrfectPics <span class="cat-face">≽^•⩊•^≼</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left-aligned grouped navigation -->
                    <ul class="navbar-nav me-auto">
                        <!-- Home & Dashboard Group -->
                        <li class="nav-item-group">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="nav-divider">|</span>
                                <a class="nav-link" asp-controller="User" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            }
                        </li>

                        <!-- Browse & Upload Group -->
                        <li class="nav-item-group">
                            <span class="nav-group-spacer"></span>
                            <a class="nav-link" asp-controller="CatImage" asp-action="Index">
                                <i class="bi bi-images me-1"></i>Browse
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="nav-divider">|</span>
                                <a class="nav-link" asp-controller="CatImage" asp-action="Upload">
                                    <i class="bi bi-cloud-arrow-up me-1"></i>Upload
                                </a>
                            }
                        </li>

                        <!-- About & Privacy Group -->
                        <li class="nav-item-group">
                            <span class="nav-group-spacer"></span>
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i>About
                            </a>
                            <span class="nav-divider">|</span>
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Right-aligned login/logout -->
                    <div class="navbar-right">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
