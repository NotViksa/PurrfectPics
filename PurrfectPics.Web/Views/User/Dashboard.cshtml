@model PurrfectPics.Web.Models.UserDashboardViewModel
@using Microsoft.AspNetCore.Identity
@using PurrfectPics.Data.Models.Identity
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="user-dashboard">
    <!-- Profile Header Section -->
    <div class="profile-section">
        <div class="profile-card">
            <img src="@Model.User.ProfileImageUrl" class="profile-avatar" alt="Profile Image">
            <div class="profile-details">
                <h2>@Model.User.DisplayName</h2>
                @if (!string.IsNullOrEmpty(Model.User.ProfileBio))
                {
                    <p class="profile-bio">@Model.User.ProfileBio</p>
                }
                <a asp-action="EditProfile" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
            </div>
        </div>
    </div>

    <!-- Content Tabs -->
    <div class="dashboard-tabs">
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="uploads-tab" data-bs-toggle="tab" data-bs-target="#uploads" type="button" role="tab">
                    <i class="bi bi-cloud-arrow-up"></i> My Uploads (@Model.UploadedImages.Count())
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites" type="button" role="tab">
                    <i class="bi bi-heart-fill"></i> My Favorites (@Model.FavoriteImages.Count())
                </button>
            </li>
        </ul>

        <div class="tab-content" id="dashboardTabsContent">
            <!-- Uploads Tab -->
            <div class="tab-pane fade show active" id="uploads" role="tabpanel">
                @if (!Model.UploadedImages.Any())
                {
                    <div class="empty-gallery">
                        <i class="bi bi-images"></i>
                        <h4>No uploads yet</h4>
                        <p>Share your first cat picture with the community!</p>
                        <a asp-controller="CatImage" asp-action="Upload" class="btn btn-primary">
                            <i class="bi bi-cloud-arrow-up"></i> Upload Image
                        </a>
                    </div>
                }
                else
                {
                    <div class="gallery-grid">
                        @foreach (var image in Model.UploadedImages)
                        {
                            <div class="gallery-item">
                                <a asp-controller="CatImage" asp-action="Details" asp-route-id="@image.Id" class="image-link">
                                    <img src="@image.ImageUrl" alt="@image.Title" class="gallery-image">
                                </a>
                                <div class="gallery-overlay">
                                    <div class="image-title">@image.Title</div>
                                    <div class="image-actions">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="favorites" role="tabpanel">
                @if (!Model.FavoriteImages.Any())
                {
                    <div class="empty-gallery">
                        <i class="bi bi-heart"></i>
                        <h4>No favorites yet</h4>
                        <p>Start exploring and favorite some cute cat pictures!</p>
                        <a asp-controller="CatImage" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-search"></i> Browse Images
                        </a>
                    </div>
                }
                else
                {
                    <div class="gallery-grid">
                        @foreach (var image in Model.FavoriteImages)
                        {
                            <div class="gallery-item">
                                <a asp-controller="CatImage" asp-action="Details" asp-route-id="@image.Id" class="image-link">
                                    <img src="@image.ImageUrl" alt="@image.Title" class="gallery-image">
                                </a>
                                <div class="gallery-overlay">
                                    <div class="image-title">@image.Title</div>
                                    <div class="image-actions">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle voting forms with AJAX
            $('.vote-form').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var votingControls = form.closest('.voting-controls');
                var voteCount = votingControls.find('.vote-count');
                var isUpvote = form.attr('action').includes('isUpvote=true');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(data) {
                        if (data.success) {
                            // Update vote count
                            voteCount.text(data.score);

                            // Update button styles
                            var upvoteBtn = votingControls.find('[action*="isUpvote=true"] button');
                            var downvoteBtn = votingControls.find('[action*="isUpvote=false"] button');

                            if (isUpvote) {
                                upvoteBtn.toggleClass('btn-upvoted', data.userVote?.isUpvote === true);
                                downvoteBtn.removeClass('btn-downvoted');
                            } else {
                                downvoteBtn.toggleClass('btn-downvoted', data.userVote?.isUpvote === false);
                                upvoteBtn.removeClass('btn-upvoted');
                            }
                        }
                    }
                });
            });

            // Handle favorite forms with AJAX
            $('.favorite-form').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var btn = form.find('button');
                var icon = btn.find('i');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(data) {
                        if (data.success) {
                            btn.toggleClass('btn-favorited', data.isFavorited);
                            icon.toggleClass('bi-heart-fill bi-heart');

                            // Update favorites count in the tab
                            if (data.isFavorited) {
                                $('.stat-count').eq(1).text(parseInt($('.stat-count').eq(1).text()) + 1);
                            } else {
                                $('.stat-count').eq(1).text(parseInt($('.stat-count').eq(1).text()) - 1);
                            }
                        }
                    }
                });
            });

            // Prevent image link from working when clicking on buttons
            $('.voting-controls button, .favorite-form button').click(function(e) {
                e.stopPropagation();
            });
        });
    </script>
}