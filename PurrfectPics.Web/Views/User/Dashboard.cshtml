@model PurrfectPics.Web.Models.UserDashboardViewModel

@{
    ViewData["Title"] = "My Dashboard";
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <img src="@Model.User.ProfileImageUrl" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Image">
                <h5>@Model.User.DisplayName</h5>
                <p class="text-muted">@Model.User.ProfileBio</p>
                <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h3>My Uploads</h3>
        @if (!Model.UploadedImages.Any())
        {
            <div class="alert alert-info">
                You haven't uploaded any images yet. <a asp-controller="CatImage" asp-action="Upload">Upload your first cat pic!</a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var image in Model.UploadedImages)
                {
                    <div class="col-md-4 mb-4">
                        <partial name="_ImageCardPartial" model="image" />
                    </div>
                }
            </div>
        }
            <h3 class="mt-5">My Favorites</h3>
    @if (!Model.FavoriteImages.Any())
    {
        <div class="alert alert-info">
            You haven't favorited any images yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var image in Model.FavoriteImages)
            {
                <div class="col-md-4 mb-4">
                    <partial name="_ImageCardPartial" model="image" />
                </div>
            }
        </div>
    }
    </div>
</div>